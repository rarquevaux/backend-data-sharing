{
    "version": "0.2.0",
    "configurations": [
        
      {
        "type": "node",
        "request": "attach",
        "name": "Debug: app-name",
        "remoteRoot": "/usr/src/app",
        "localRoot": "${workspaceFolder}",
        "protocol": "inspector",
        "port": 9229,
        "restart": true,
        "address": "127.0.0.1",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
   }